<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.utgenome</groupId>
  <artifactId>utgb-parent</artifactId>
  <name>UTGB Project</name>
  <version>1.0-SNAPSHOT</version>
  <description>The Parent POM (Common Settings) for University of Tokyo Genome Browser (UTGB) Projects</description>
  <packaging>pom</packaging>
  
  <inceptionYear>2007</inceptionYear>

  <url>http://maven.utgenome.org/repository/site/utgb</url>


  <modules>
    <module>utgb-core</module>
  </modules>


  <issueManagement>
    <system>Trac</system>
    <url>http://trac.utgenome.org/project/UTGB/</url>
  </issueManagement>

 <ciManagement>
    <system>continuum</system>
    <url>http://maven.utgenome.org/continuum</url>
  </ciManagement>

  <mailingLists>
    <mailingList>
      <name>UTGB Users</name>
      <subscribe>http://groups.google.com/group/utgb-users/subscribe?hl=en</subscribe>
      <post>http://groups.google.com/group/utgb-users/post?hl=en</post>
      <archive>http://groups.google.com/group/utgb-users?hl=en</archive>
    </mailingList>
    <mailingList>
      <name>UTGB Deverlopers</name>
      <subscribe>http://groups.google.com/group/utgb/subscribe?hl=en</subscribe>
      <post>http://groups.google.com/group/utgb/post?hl=en</post>
      <archive>http://groups.google.com/group/utgb?hl=en</archive>
    </mailingList>  
 </mailingLists>

  <licenses>
    <license>
      <name>Apache 2</name>
      <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
      <distribution>repo</distribution>
    </license>
  </licenses>

  <scm>
    <connection>scm:svn:http://svn.utgenome.org/utgb/trunk/utgb</connection>
    <developerConnection>scm:svn:http://svn.utgenome.org/utgb/trunk/utgb</developerConnection>
    <url>http://svn.utgenome.org/utgb/trunk/utgb/</url>
  </scm>

  <organization>
    <name>utgenome.org</name>
  </organization>

  <developers>
    <developer>
      <id>leo</id>
      <name>Taro L. Saito</name>
      <url>http://www.xerial.org</url>
      <organization>University of Tokyo</organization>
      <roles>
        <role>architect</role>
        <role>developer</role>
      </roles>
      <timezone>+9</timezone>
    </developer>
    <developer>
      <id>ssksn</id>
      <name>Shin Sasaki</name>
      <organization>University of Tokyo</organization>
      <roles>
        <role>developer</role>
      </roles>
      <timezone>+9</timezone>
    </developer>
  </developers>


  <build>
    <resources>
      <!-- this settings is requried to include sources codes to the artifact -->
      <resource>
        <directory>src/main/java</directory>
      </resource>
      <resource>
        <directory>src/main/resources</directory>
      </resource>
    </resources>
    <testResources>
      <testResource>
        <directory>src/test/java</directory>
      </testResource>
      <testResource>
        <directory>src/test/resources</directory>
      </testResource>
    </testResources>

    <!-- for WebDAV -->
    <extensions>
      <extension>
        <groupId>org.apache.maven.wagon</groupId>
        <artifactId>wagon-webdav</artifactId>
        <version>1.0-beta-2</version>
      </extension>
    </extensions>

    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
	  <!-- Use JDK 1.5 until Java6 for Mac OS X is released -->
          <source>1.5</source>
          <target>1.5</target>
        </configuration>
      </plugin>

      <!-- tag directory -->
      <plugin>
        <artifactId>maven-release-plugin</artifactId>
        <configuration>
          <tagBase>http://svn.utgenome.org/utgb/tags/utgb</tagBase>
        </configuration>
      </plugin>

    </plugins>
  </build>

  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.1</version>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <!-- Java Doc -->
  <reporting>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-javadoc-plugin</artifactId>
        <version>2.2</version>
        <configuration>
          <doctitle>UTGB Project API</doctitle>
          <aggregate>true</aggregate>
          <locale>en_US</locale>
<!--          <stylesheetfile>${basedir}/javadoc.css</stylesheetfile> -->
          <bottom><![CDATA[<a rel="license" href="http://creativecommons.org/licenses/by-sa/2.1/jp/"><img alt="Creative Commons License" border="0" src="http://creativecommons.org/images/public/somerights20.gif" /></a><br />This work is licensed under a <a rel="license" href="http://creativecommons.org/licenses/by-sa/2.1/jp/">Creative Commons Attribution-ShareAlike 2.1 Japan License</a>.<!--<rdf:RDF xmlns="http://web.resource.org/cc/" xmlns:dc="http://purl.org/dc/elements/1.1/" xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"><Work rdf:about=""><dc:date>2005</dc:date><dc:rights><Agent><dc:title>utgenome org.</dc:title></Agent></dc:rights><license rdf:resource="http://creativecommons.org/licenses/by-sa/2.1/jp/" /></Work><License rdf:about="http://creativecommons.org/licenses/by-sa/2.1/jp/"><permits rdf:resource="http://web.resource.org/cc/Reproduction" /><permits rdf:resource="http://web.resource.org/cc/Distribution" /><requires rdf:resource="http://web.resource.org/cc/Notice" /><requires rdf:resource="http://web.resource.org/cc/Attribution" /><permits rdf:resource="http://web.resource.org/cc/DerivativeWorks" /><requires rdf:resource="http://web.resource.org/cc/ShareAlike" /></License></rdf:RDF>-->]]></bottom>
        </configuration>
      </plugin>

	<plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-jxr-plugin</artifactId>
	  <configuration>
            <aggregate>true</aggregate>
          </configuration>
	</plugin>
    </plugins>
  </reporting>

  <repositories>
    <!-- Xerial Repository -->
    <repository>
      <id>xerial</id>
      <name>Xerial Artifact Repository</name>
      <url>http://maven.xerial.org/repository/artifact</url>
    </repository>
    <repository>
      <id>xerial-snapshot</id>
      <name>Xerial Artifact Repository</name>
      <url>http://maven.xerial.org/repository/snapshot</url>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>

    <!-- UTGB Repository -->
    <repository>
      <id>utgb</id>
      <name>UTGB Artifact Repository</name>
      <url>http://maven.utgenome.org/repository/artifact</url>
    </repository>
    <repository>
      <id>utgb-snapshot</id>
      <name>UTGB SNAPSHOT Repository</name>
      <url>http://maven.utgenome.org/repository/snapshot</url>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>
  </repositories>


  <pluginRepositories>
    <pluginRepository>
      <id>xerial</id>
      <name>Xerial Artifact Repository</name>
      <url>http://maven.xerial.org/repository/artifact</url>
    </pluginRepository>
  </pluginRepositories>

  <distributionManagement>
    <repository>
      <id>utgb.dav</id>
      <name>UTGB Maven Repository</name>
      <url>dav:http://maven.utgenome.org/repository/artifact</url>
    </repository>
    <snapshotRepository>
      <id>utgb.dav</id>
      <name>UTGB Maven Snapshot Repository</name>
      <url>dav:http://maven.utgenome.org/repository/snapshot</url>
    </snapshotRepository>
    <site>
      <id>utgb.dav</id>
      <url>dav:http://maven.utgenome.org/repository/site/utgb</url>
    </site>
  </distributionManagement>
</project>
