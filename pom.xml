  <build>
    <resources>
      <!-- this settings is requried to include sources codes to the artifact -->
      <resource>
        <directory>src/main/java</directory>
      </resource>
      <resource>
        <directory>src/main/resources</directory>
      </resource>
    </resources>
    <testResources>
      <testResource>
        <directory>src/test/java</directory>
      </testResource>
      <testResource>
        <directory>src/test/resources</directory>
      </testResource>
    </testResources>

    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-resources-plugin</artifactId>
		<version>2.4</version>
        <configuration>
          <encoding>UTF-8</encoding>
        </configuration>
      </plugin>
	  
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
	<version>2.0.2</version>
        <configuration>
	  <!-- Use JDK 1.5 until Java6 for Mac OS X is released -->
          <source>1.5</source>
          <target>1.5</target>
        </configuration>
      </plugin>

      <plugin>
		<groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-eclipse-plugin</artifactId>
		<version>2.8</version>
        <configuration>
          <useProjectReferences>false</useProjectReferences>
          <downloadSources>true</downloadSources>
          <downloadJavadocs>true</downloadJavadocs>
        </configuration>
      </plugin>


      <!-- tag directory -->
      <plugin>
        <artifactId>maven-release-plugin</artifactId>
		<version>2.0-beta-9</version>
        <configuration>
		  <autoVersionSubmodules>true</autoVersionSubmodules>
		  <preparationGoals>clean install</preparationGoals>
          <goals>deploy</goals>
          <connectionUrl>scm:hg:https://utgb.googlecode.com/hg/</connectionUrl>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-site-plugin</artifactId>
		<version>2.0-beta-7</version>
        <dependencies>
          <dependency>
            <groupId>org.xerial.maven</groupId>
            <artifactId>doxia-aqua</artifactId>
            <version>1.0.5</version>
          </dependency>
        </dependencies>
      </plugin>


    </plugins>
  </build>

