# This shell script is generated by following the Maven's start-up batch script
# Detecting the current OS

while getopts "x:" OPT
do 
 case $OPT in 
  "x" ) R_PORT="$OPTARG";;
 esac
done

if [ -z "$R_PORT" ] ; then
 R_PORT=8990
fi

echo "Running UTGB in the remote debug mode" 1>&2
JVM_OPT="$JVM_OPT -Xdebug -Xrunjdwp:transport=dt_socket,server=y,suspend=n,address=$R_PORT"

JVM_OPT=${JVM_OPT} utgb $*





